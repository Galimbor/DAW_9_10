{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}



    <div class="bg-light w-75 mx-auto mt-3 p-4">
        <h1 class="text-center mt-3">Reset your password  </h1>
        {{ form_start(resetForm) }}
        <div class="form-group">
            {{ form_row(resetForm.plainPassword.first,{'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(resetForm.plainPassword.second,{'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mt-5 d-flex justify-content-center">
            <button type="submit" class="btn btn-outline-dark  " name="reset_pass" >Submit</button>
        </div>
        {{ form_end(resetForm) }}
    </div>



{% endblock %}
