{% extends('base.html.twig') %}


{% block title %} Forum's homepage {% endblock %}


    {% block logged_user %}
        {% if app.user %}
            <li class="nav-item active mr-2 ">
                <p class="nav-link my-auto"> Welcome <span class="font_weight_b">{{ app.user.name}}</span></p>
            </li>
        {% endif %}
    {% endblock %}


{% block body %}




    <div id="carouselExampleSlidesOnly" class="carousel slide " data-ride="carousel">
        <div class="carousel-inner p-2 ">
            <div class="carousel-item active">
                <img class="d-block w-100 rounded" src="{{ asset('images/slide1.jpg') }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 rounded" src="{{ asset('images/slide2.jpg') }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 rounded" src="{{ asset('images/slide3.jpg') }}" alt="Third slide">
            </div>
        </div>
    </div>

    {% for user in data.users %}
        <div class="mt-5 container bg-light ">
            <div class="row">
                <div class="col-sm-3 py-2 border">
                    <div class="user-pic float-left">
                    </div>
                    <p class="username py-4 "> {{ user.name }} </p>
                    <div class="pst-information mt-4">
                        <p class="">Post created at: {{ user.created_at }}</p>
                        <p class="">Post updated at: {{ user.updated_at }}</p>
                        <!-- The user.id in this case is the POST ID. -->
                        <a name="update_post"
                           href="{{ path('post', {blog_id : user.id}) }}">{% if app.user.id and app.user.id == user.userid %} Update Blog {% endif %} </a>
                    </div>
                </div>
                <div class=" col col-sm border">
                    <p class="p-3"> {{ user.content }} </p>
                </div>
            </div>
        </div>

    {% endfor %}

{% endblock %}






